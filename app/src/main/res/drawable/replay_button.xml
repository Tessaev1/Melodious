<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#CE5050" />
            <solid android:color="#CE5050"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C64D4D" />
            <gradient android:angle="-90" android:startColor="#CE5050" android:endColor="#BC4949" />
        </shape>
    </item>
</selector>